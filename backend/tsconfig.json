{
  "$schema": "https://json.schemastore.org/tsconfig",

  /* ====================================================================== */
  /*  D√âBROUILLE BACKEND ‚Äî TSCONFIG OFFICIEL                                 */
  /*  STABLE ‚Ä¢ ENTERPRISE ‚Ä¢ LONG TERM ‚Ä¢ WORLD CLASS                          */
  /* ====================================================================== */
  /*                                                                          */
  /*  üéØ OBJECTIFS STRAT√âGIQUES :                                             */
  /*  - Compilation fiable et d√©terministe                                   */
  /*  - Typage strict sans explosion de dette technique                       */
  /*  - Compatible TypeScript 5+                                             */
  /*  - Performance ma√Ætris√©e                                                */
  /*  - √âvolutivit√© monorepo / microservices                                  */
  /*  - Z√©ro option d√©pr√©ci√©e                                                 */
  /*                                                                          */
  /* ====================================================================== */

  "compilerOptions": {
    /* ---------------------------------------------------------------------- */
    /* üß† RUNTIME TARGET                                                      */
    /* ---------------------------------------------------------------------- */

    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "./src",
    "outDir": "./dist",

    /* ---------------------------------------------------------------------- */
    /* üîí STRICTNESS ‚Äî PRODUCTION SAFE                                         */
    /* ---------------------------------------------------------------------- */

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,

    /* ---------------------------------------------------------------------- */
    /* üßπ QUALIT√â & ROBUSTESSE                                                 */
    /* ---------------------------------------------------------------------- */

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    /*
     * D√©sactiv√© volontairement :
     * - Trop cassant sur bases de code larges
     * - Peut √™tre r√©activ√© progressivement plus tard
     */
    "exactOptionalPropertyTypes": false,

    /* ---------------------------------------------------------------------- */
    /* üèóÔ∏è BUILD & EMISSION                                                    */
    /* ---------------------------------------------------------------------- */

    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",

    /* ---------------------------------------------------------------------- */
    /* üîÑ NODE / ECOSYSTEM INTEROP                                             */
    /* ---------------------------------------------------------------------- */

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ---------------------------------------------------------------------- */
    /* üåç TYPES GLOBAUX                                                       */
    /* ---------------------------------------------------------------------- */

    "types": ["node"],

    /* ---------------------------------------------------------------------- */
    /* ‚ö° PERFORMANCE                                                         */
    /* ---------------------------------------------------------------------- */

    "skipLibCheck": true,

    /* ---------------------------------------------------------------------- */
    /* üß≠ PATH ALIASES (ARCHITECTURE PROPRE)                                   */
    /* ---------------------------------------------------------------------- */

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@db/*": ["src/database/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"]
    },

    /* ---------------------------------------------------------------------- */
    /* üõ°Ô∏è SAFE DEFAULTS                                                      */
    /* ---------------------------------------------------------------------- */

    "useDefineForClassFields": true
  },

  /* ------------------------------------------------------------------------ */
  /* üì¶ P√âRIM√àTRE DE COMPILATION                                              */
  /* ------------------------------------------------------------------------ */

  "include": [
    "src/**/*.ts"
  ],

  /* ------------------------------------------------------------------------ */
  /* üö´ EXCLUSIONS (BUILD PRODUCTION)                                         */
  /* ------------------------------------------------------------------------ */

  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "scripts",
    "coverage",
    "src/modules/_template",

    /* Tests exclus du build principal */
    "src/tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
