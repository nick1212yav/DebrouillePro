{
  "name": "@debrouille/backend",
  "version": "1.0.0",
  "description": "DebrouillePro Backend â€” Sovereign, secure, scalable and auditable backend for the Debrouille super-app (Africa + World)",
  "private": true,
  "license": "UNLICENSED",
  "author": {
    "name": "Debrouille",
    "email": "support@debrouille.com",
    "url": "https://debrouille.com"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.0",
  "homepage": "https://debrouille.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/debrouille/backend.git"
  },
  "bugs": {
    "url": "https://github.com/debrouille/backend/issues"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:staging": "cross-env NODE_ENV=staging node dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "audit:deps": "npm audit --audit-level=moderate",
    "audit:licenses": "license-checker --summary",
    "security:scan": "npm run audit:deps && npm run audit:licenses",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist node_modules",
    "reinstall": "npm run clean && npm install",
    "health": "node -e \"console.log('Debrouille Backend OK')\"",
    "ci": "npm run typecheck && npm run lint && npm run test && npm run build && npm run security:scan"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.4",
    "meilisearch": "^0.55.0",
    "mongoose": "^8.2.1",
    "pg": "^8.17.1",
    "uuid": "^9.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "debrouille",
    "backend",
    "nodejs",
    "typescript",
    "express",
    "mongodb",
    "super-app",
    "enterprise",
    "sovereign",
    "secure",
    "scalable",
    "offline",
    "africa",
    "planet-scale",
    "audit-ready",
    "zero-trust"
  ]
}
